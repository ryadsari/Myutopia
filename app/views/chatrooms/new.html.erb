<div class="container">
  <%#= link_to 'Back', @character_path %>
  <div class="container mt-4 mb-4">
    <div class="row">
      <div class="col-6 m-auto">
        <div class="character-form">
          <h1>Add a new chatroom</h1>
          <div class="mt-3 mb-4 d-flex flex-column">
             <%= simple_form_for [@chatroom] do |f| %>
                <label for="chatroom">Please make a new chatroom</label><br>
                <div class="cv5">
                <%= f.label :name %>
                </div>
                <div class="cv5">
                <%= f.text_field :name %>
                </div>
                 <%= f.input :photo, as: :file, class: 'form-control form-border cv6' %>
                <div class="cv5">
                <%= f.submit "Save your chatroom", class: "btn cv5" %> <br><br>
                 </div>

              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
