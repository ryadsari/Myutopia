<div class="form">
  <%= form_tag chatrooms_path, method: :get, id: "search-form-inline" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control-inline",
      placeholder: "Find a chatroom"
    %>
    <%= submit_tag "Search", class: "btn button-primary" %>
  <% end %>
</div>
