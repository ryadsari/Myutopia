
<body class="new_chara_body">
  <%= link_to 'Back', characters_path, class: 'cv3' %>
  <h1 class="cv5">Add a new Character</h1>
    <div id='dumbcss'>
      <%= simple_form_for @character do |f| %>
        <div class="cv5">
          <%= f.input :name, class: 'form-control form-border', placeholder: 'What shall the name of your new character be ?' %>
          </div>
          <div class="cv5">
          <%= f.input :world, class: 'form-control form-border cv6', placeholder: 'Where does your character from ?' %>
          </div>
          <div class="cv5">
          <%= f.input :race, class: 'form-control form-border cv6',placeholder: 'What race is your character ?' %>
          </div>
          <div class="cv5">
          <%= f.input :photo, as: :file, class: 'form-control form-border cv6' %>
          </div>
          <div class="cv5">
          <%= link_to 'Cancel', characters_path , class: 'btn  ms-2 submit-button cv5' %>
          <%= f.submit class: 'btn nav-btn cv5' %>
          </div>
        </div>
    <% end %>
</body>
