<div>
  <div>
    <%= render "search_form", character: @character %>
  </div>

  <div>
    <div>
      <% @characters.each do |character| %>
        <div>
          <%= link_to character_path(character) do %>
            <% if character.photo.attached? %>
              <%= cl_image_tag character.photo.key, height: 300, width: 400, crop: :fill %>
              <% else %>
                <%= image_tag 'https://res.cloudinary.com/dlzusxobf/image/upload/v1653923867/development/character_j1ujrb.jpg', height: 300, width: 400, crop: :fill %>
              <% end %>
              <div>
              <%= character.name %>
              <%= character.race %>
              <%= character.world %>
            </div>
            <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
