<div>
  <div>
    <%= render "search_form", character: @character %>
  </div>

  <div class="container">
    <div class="d-flex justify-content-center flex-row align-items-center flex-wrap p-2">
      <% @characters.each do |character| %>
        <div class="p-2">
          <%= link_to character_path(character) do %>
            <% if character.photo.attached? %>
              <div  style="width:400px; height:300px"><%= cl_image_tag character.photo.key, height: 300, width: 400, crop: :fill %></div>
              <% else %>
                <%= image_tag 'https://res.cloudinary.com/dlzusxobf/image/upload/v1653923867/development/character_j1ujrb.jpg', height: 300, width: 400, crop: :fill %>
              <% end %>
              <div>
              <%= character.name %>
              <%= character.race %>
              <%= character.world %>
            </div>
            <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
